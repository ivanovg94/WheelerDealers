
@{
    ViewData["Title"] = "Details";
}

@model Dealership.Data.Models.Car

<h2>Car details</h2>

<div>
    <h3>Id: <strong>@Model.Id</strong></h3>
    <p>Ad created on: <strong> @Model.CreatedOn.Value.ToShortDateString()</strong></p>
    <p>Year:<strong> @Model.ProductionDate.Year</strong></p>
    <p>Brand:<strong> @Model.Brand.Name</strong></p>
    <p>Model:<strong> @Model.Model</strong></p>
    <p>Body type:<strong> @Model.BodyType.Name</strong></p>
    <p>Engine capacity:<strong> @Model.EngineCapacity</strong></p>
    <p>Horse power:<strong> @Model.HorsePower</strong></p>
    <p>Color:<strong> @Model.Color.Name (@Model.Color.ColorType.Name)</strong></p>
    <p>Gearbox:<strong> @Model.GearBox.GearType.Name (@Model.GearBox.NumberOfGears) gears</strong></p>
    <p>Price:<strong> @Model.Price $</strong></p>

    <a class="btn btn-default" asp-controller="Car" asp-action="Index">Back</a>
</div>

