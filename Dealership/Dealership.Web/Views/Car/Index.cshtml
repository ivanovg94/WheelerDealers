@model IEnumerable<Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Cars list</h1>
<a class="btn btn-default" asp-controller="Car" asp-action="Create">Create</a>

<div class="row">
    @foreach (var car in Model)
    {
        var currentId = car.Id;

        <div class="col-md-4">
            <h3>@car.Id</h3>
            <p>Brand: <strong>@car.Brand.Name</strong> </p>
            <p>Model: <strong>@car.Model</strong> </p>
            <p>Body type: <strong>  @car.BodyType.Name</strong> </p>
            <p>Color: <strong> @car.Color.Name</strong> </p>
            <p>Horse power: <strong> @car.HorsePower</strong> </p>
            <p>Fuel type: <strong> @car.FuelType.Name</strong> </p>
            <a class="btn btn-default" asp-controller="Car" asp-action="Details/@currentId">Details</a>
            <a class="btn btn-default" asp-controller="Car" asp-action="Edit/@currentId">Edit</a>
            <a class="btn btn-default" asp-controller="Car" asp-action="Delete/@currentId">Delete(todo)</a>
            <hr />

        </div>
    }
</div>

