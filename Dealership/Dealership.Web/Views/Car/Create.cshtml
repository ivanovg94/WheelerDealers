@model Dealership.Web.Models.EditCarViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create a car</h2>

@await Html.PartialAsync("_StatusMessage", Model.Car.StatusMessage)

<hr />
<div class="col-lg-4">
    <form asp-controller="Car" asp-action="Create" method="post" enctype="multipart/form-data">

        <partial name="_EditCarPartial" model="@Model" />

        <div class="btn-block">
            <label for="file">Choose images to upload</label>
            <input type="file" name="Images" multiple class="btn btn-default">
        </div>

        <div class="form-group">
            <input type="submit" name="save" value="Save" class="btn btn-success" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/createcar.js"></script>
}