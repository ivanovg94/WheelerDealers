        <label asp-for="@Model.BodyType" class="control-label"></label>
        <select asp-for="@Model.BodyType" asp-items="@Model.BodyTypes" class="form-control"></select>
    </div>*@


<div class="container">
    <div class="col-lg-12">
        <div class="form-group">
            <label class="col-lg-2 col-lg-offset-1 control-label">Brand</label>
            <div class="col-lg-9">
                <div class="form-group">
                    <div class="col-lg-3">
                        @*<select asp-for="@Model.Brand" asp-items="@Model.BodyTypes" class="form-control"></select>*@
                    </div>
                    <div class="col-lg-3 col-lg-offset-1">
                        <a asp-action="Browse">Search</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="col-lg-12">
    <div class="list-group col-lg-offset-1 col-lg-10">

        @foreach (var car in Model.Summaries)
        {
            <partial name="_CarSummary" model="car" />
        }
    </div>
</div>

<div class="col-lg-offset-1 col-lg-11">
    <ul class="pagination pagination-sm">

        @for (int i = 0; i < Model.Pages; i++)
        {
            if (Model.CurrentPage == i)
            {
                <li class="active"> <a asp-action="Browse" asp-route-page="@i">@(i + 1)</a></li>
            }
            else
            {
                <li> <a asp-action="Browse" asp-route-page="@i">@(i + 1)</a></li>
            }
        }
    </ul>
</div>

